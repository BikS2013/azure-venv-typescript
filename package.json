{
  "name": "azure-venv",
  "version": "0.2.0",
  "description": "TypeScript library to sync Azure Blob Storage as a virtual folder on app startup",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "azure-venv": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli/index.js 2>/dev/null || true",
    "test": "vitest run",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "azure",
    "blob-storage",
    "sync",
    "env",
    "configuration"
  ],
  "license": "ISC",
  "dependencies": {
    "@azure/storage-blob": "^12.31.0",
    "commander": "^14.0.3",
    "dotenv": "^17.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.2",
    "eslint": "^10.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  }
}
